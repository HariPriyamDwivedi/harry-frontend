<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO DETAILS"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="22dp"
        android:textColor="#FCF9F9"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO DISTRICT :"
        android:textColor="#605E5E"
        android:textSize="22dp"
        android:textStyle="normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FCF9F9"
        android:id="@+id/ngo_district"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO STATE :"
        android:textColor="#605E5E"
        android:textSize="22dp"
        android:textStyle="normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FCF9F9"
        android:id="@+id/ngo_state"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO PAN NUMBER:"
        android:textSize="22dp"
        android:textColor="#605E5E"
        android:textStyle="normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FCF9F9"
        android:id="@+id/ngo_pan_no"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSR NUMBER :"
        android:textColor="#605E5E"
        android:textSize="22dp"
        android:textStyle="normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FCF9F9"
        android:id="@+id/csr_no"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGO NITI AYOG :"
        android:textColor="#605E5E"
        android:textSize="22dp"
        android:textStyle="normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FCF9F9"
        android:id="@+id/ngo_niti_ayog"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <Button
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:padding="27dp"
            android:text="BACK"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/submit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginLeft="80dp"
            android:text="SUBMIT"
            android:textSize="22dp"/>
    </LinearLayout>


</LinearLayout>